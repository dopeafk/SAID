@model Product

<h2>Add New Product</h2>


<form asp-controller="Products" asp-action="Add">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Product name" aria-label="Name" aria-describedby="basic-addon1" asp-for="Name" />
    </div>
    <div class="input-group mb-3">
        <input type="text" placeholder="Price" class="form-control" aria-label="Amount" asp-for="Price" />
    </div>
    <button type="submit" asp-controller="Products" asp-action="Add" class="btn btn-primary">Add Product</button>
</form>

